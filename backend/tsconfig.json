{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src"],
	"exclude": ["**/*.test/.ts", "src/prisma/**/*", "src/generated/**/*"]
}
